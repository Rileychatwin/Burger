<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="/assets/images/burger.png" alt="burger" />
			<h1> NOM NOM NOM </h1>
		</div>

<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-12 sections">
      <h2>Add a Burger!</h2>
      <form class="create-form text-center">
        <div class="form-group">
          <label for="burger-name">New Burger:</label>
          <input type="text" id="burger-name" name="name">
          <button class="btn btn-success btn-sm" type="submit">Add Burger</button>
        </div>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-4 order-md-1 sections">
      <h2>Burgers to eat!</h2>
      <ul class="burger-undevoured">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=devoured}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-12 col-md-4 order-md-3 sections">
      <h2>Burgers consumed!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=devoured}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>